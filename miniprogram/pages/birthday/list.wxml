<scroll-view scroll-y style='height:100vh'>
  <block wx:if="{{list.length>0}}">
  <view wx:for="{{list}}" wx:key="id" class="list-item">
    <text>{{item.name}}({{item.birthday}})</text>
    <text>{{item.when}}</text>
  </view>
  </block>
  <view style='text-align:center' wx:else>
    暂无族人设置了生日。
  </view>
</scroll-view>