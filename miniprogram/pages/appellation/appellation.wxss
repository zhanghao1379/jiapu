page {
  background-color: #333;
}

.wx-switch-input {
  width: 82rpx !important;
  height: 40rpx !important;
}

/*白色样式（false的样式）*/

.wx-switch-input::before {
  width: 80rpx !important;
  height: 36rpx !important;
}

/*绿色样式（true的样式）*/

.wx-switch-input::after {
  width: 40rpx !important;
  height: 36rpx !important;
}

.second {
  background: #e5e5e5;
  color: #fff;
}

.section {
  font-size: 30rpx;
  width: 95%;
  height: 22vh;
  color: #bbb;
  padding-left: 5%;
}

.input-show {
  font-size: 80%;
  padding: 5px;
  color: #bbb;
}

.output-show {
  font-size: 100%;
  color: #e6e6e6;
  background: #444;
  padding: 15px;
}

.options-view {
  background: #2b2b2b;
  color: #e6e6e6;
  padding: 15px;
  font-size: 80%;
}

.btnGroup {
  display: flex;
  flex-direction: row;
}

.item {
  width: 25%;
  min-height: 10rpx;
  margin: 0rpx;
  border-radius: 0px;
  text-align: center;
  line-height: 15vh;
  display: inline-block;
  font-size: 40rpx;
}

.item2 {
  width: 50%;
  min-height: 0rpx;
  margin: 0rpx;
  border-radius: 0px;
  text-align: center;
  line-height: 15vh;
  display: inline-block;
}

.orange {
  color: #ebebeb;
  border: solid 0px #444;
  background: #e7763e;
}

.normal {
  color: #ebebeb;
  border: solid 1px #444;
  background-color: #333;
}

.normal-orange {
  color: #f78d1d;
  border: solid 1px #444;
  background-color: #333;
}
